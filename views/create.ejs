<style>
  * {
    background-color: #f2f2f2;
  }
  .write {
    margin: 15px 0 10px;
    border: 2px solid white;
    border-radius: 10px;
    max-width: 100%;
    background-color: white;
    padding: 15px;
    box-shadow: 0 15px 35px rgb(255 255 255 / 10%),
      0 5px 15px rgba(247, 247, 247, 0.07) !important;
    font-size: 1.5rem;
  }
  .btn {
    font-size: 1.5em;
    padding: 10px;
    background-color: #4267b2;
    color: white;
    border: 2px solid white;
    border-radius: 8px;
    margin-top: 10px;
  }
</style>
<body>
  <form
    action="/save"
    method="post"
    style="display: flex; flex-direction: column"
  >
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="write" />
    <label for="points">Points</label>
    <input type="number" name="points" id="points" class="write" />
    <label for="startDate">Start-Date</label>
    <input type="date" name="startDate" id="startDate" class="write" />
    <label for="endDate">End-Date</label>
    <input type="date" name="endDate" id="endDate" class="write" />
    <label for="description">Description</label>
    <textarea
      type="text"
      name="description"
      id="description"
      class="write"
    ></textarea>
    <button type="submit" class="btn">Submit</button>
  </form>
</body>
